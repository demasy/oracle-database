#==============================================================================
# DEMASYLABS ðŸš€ Oracle Sandbox â€“ Developer Environment - Environment Configuration
#==============================================================================

#------------------------------------------------------------------------------
# REGIONAL SETTINGS
#------------------------------------------------------------------------------
ENV_TIME_ZONE=Asia/Riyadh                # Timezone for database and containers

#------------------------------------------------------------------------------
# APPLICATION CONFIGURATION
#------------------------------------------------------------------------------
ENV_NODE_ENV=demasylabs                   # Node.js environment mode

#------------------------------------------------------------------------------
# NETWORK CONFIGURATION
#------------------------------------------------------------------------------
ENV_NETWORK_SUBNET=192.168.1.0/24        # Docker bridge network CIDR block
ENV_NETWORK_GATEWAY=192.168.1.1          # Network gateway IP address
ENV_IP_DB_SERVER=192.168.1.10            # Oracle Database container static IP
ENV_IP_APP_SERVER=192.168.1.20           # Application server container static IP

#------------------------------------------------------------------------------
# PORT CONFIGURATION
#------------------------------------------------------------------------------
ENV_DB_PORT_LISTENER=1521                # Oracle SQL*Net listener port
ENV_DB_PORT_EM=5500                      # Enterprise Manager Express UI port
ENV_SERVER_PORT=3000                     # Management API server port

#------------------------------------------------------------------------------
# ORACLE DATABASE CONFIGURATION
#------------------------------------------------------------------------------
ENV_DB_CLIENT=/opt/oracle/instantclient  # Oracle Instant Client path
ENV_DB_SID=FREE                          # Oracle System Identifier (CDB)
ENV_DB_SERVICE=FREEPDB1                  # Pluggable Database service name
ENV_DB_NAME=FREE                         # Database instance name
ENV_DB_CHARACTERSET=AL32UTF8             # Database character encoding
ENV_DB_USER=system                       # Default database user
ENV_DB_ADMIN_USER=system                 # Database administrator account
ENV_DB_MCP_USER=demasylabs_ai            # MCP/AI service account username
ENV_DB_DEFAULT_PASSWORD=CHANGE_ME_SECURE_PASSWORD  # Default system password (min 12 chars)
ENV_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD  # Active system password (min 12 chars)
ENV_DB_POOL_MIN=1                        # Minimum connections in pool
ENV_DB_POOL_MAX=5                        # Maximum connections in pool
ENV_DB_POOL_INCREMENT=1                  # Connection pool growth increment

#------------------------------------------------------------------------------
# ORACLE APEX CONFIGURATION
#------------------------------------------------------------------------------
ENV_APEX_HOME=/opt/oracle/apex            # APEX installation directory
ENV_APEX_IMAGES_DIR=/tmp/i                # APEX static files directory
ENV_APEX_INSTALL_LOG=/tmp/apex_install.log # APEX installation log file
ENV_APEX_TABLE_SPACE=DL_APEX_TS           # APEX metadata tablespace
ENV_APEX_TABLE_SPACE_FILES=DL_APEX_FILES_TS # APEX files tablespace
ENV_APEX_DEFAULT_WORKSPACE=DEMASY_LABS    # Default workspace name
ENV_APEX_ADMIN_USERNAME=ADMIN             # APEX admin username
ENV_APEX_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD  # APEX admin password (min 12 chars)
ENV_APEX_ADMIN_EMAIL=your.email@example.com  # APEX admin email
ENV_APEX_EMAIL=your.email@example.com    # Default APEX email
ENV_APEX_SECURITY_GROUP_ID=10             # Security group ID (10=INTERNAL)
ENV_APEX_TABLESPACE_SIZE=500M             # Initial tablespace size
ENV_APEX_TABLESPACE_AUTOEXTEND=100M       # Tablespace growth increment

#------------------------------------------------------------------------------
# ORACLE ORDS CONFIGURATION
#------------------------------------------------------------------------------
ENV_ORDS_HOME=/opt/oracle/ords            # ORDS installation directory
ENV_ORDS_CONFIG=/opt/oracle/ords/config   # ORDS configuration directory
ENV_ORDS_LOG=/tmp/ords.log                # ORDS log file path
ENV_ORDS_PORT=8080                        # ORDS HTTP listener port
ENV_ORDS_JDBC_MIN_LIMIT=3                 # Minimum JDBC connections
ENV_ORDS_JDBC_MAX_LIMIT=20                # Maximum JDBC connections
ENV_ORDS_JDBC_INITIAL_LIMIT=3             # Initial JDBC connections
ENV_ORDS_STATEMENT_TIMEOUT=900            # SQL execution timeout (seconds)


#------------------------------------------------------------------------------
# MODEL CONTEXT PROTOCOL (MCP) CONFIGURATION
#------------------------------------------------------------------------------
ENV_MCP_ENABLED=true                      # Enable/disable MCP server
ENV_MCP_PORT=3001                         # MCP server listening port

#------------------------------------------------------------------------------
# RESOURCE LIMITS - DATABASE CONTAINER
#------------------------------------------------------------------------------
ENV_DB_CPU_LIMIT=2                        # CPU cores for database container
ENV_DB_MEMORY_LIMIT=4g                    # Memory limit for database container

#------------------------------------------------------------------------------
# RESOURCE LIMITS - APPLICATION CONTAINER
#------------------------------------------------------------------------------
ENV_SERVER_CPU_LIMIT=3.0                  # CPU cores for application container
ENV_SERVER_MEMORY_LIMIT=3g                # Memory limit for application container

#------------------------------------------------------------------------------
# ORACLE CLIENT DOWNLOAD SOURCES (BUILD ARGUMENTS)
#------------------------------------------------------------------------------
ENV_SRC_OFFLINE_MODE=false                # Enable offline build mode
ENV_SRC_OFFLINE_PATH=./libs/oracle        # Local offline files path
ENV_SRC_OFFLINE_SQLCL=sqlcl-latest.zip    # Local SQLcl zip filename
ENV_SRC_OFFLINE_SQLPLUS=instantclient-sqlplus-linux.arm64-23.9 # Local SQL*Plus filename
ENV_SRC_OFFLINE_APEX=apex-latest.zip      # Local APEX zip filename
ENV_SRC_OFFLINE_ORDS=ords-latest.zip      # Local ORDS zip filename
ENV_SRC_OFFLINE_POS_SCHEMA=v1.0.zip       # Local POS schema zip filename
ENV_SRC_ORACLE_OFFLINE=false              # Use offline sources flag
ENV_SRC_ORACLE_SQLCL=https://download.oracle.com/otn_software/java/sqldeveloper/sqlcl-latest.zip # SQLcl download URL
ENV_SRC_ORACLE_SQLPLUS=https://download.oracle.com/otn_software/linux/instantclient/2390000/instantclient-sqlplus-linux.arm64-23.9.0.25.07.zip # SQL*Plus ARM64 download URL
ENV_SRC_ORACLE_APEX=https://download.oracle.com/otn_software/apex/apex-latest.zip # APEX download URL
ENV_SRC_ORACLE_ORDS=https://download.oracle.com/otn_software/java/ords/ords-latest.zip # ORDS download URL
ENV_SRC_POS_SCHEMA=https://github.com/demasylabs/Point-Of-Sale/archive/refs/tags/v1.0.zip # POS schema download URL
ENV_SRC_ORACLE_INSTANTCLIENT=https://download.oracle.com/otn_software/linux/instantclient/2390000/instantclient-basic-linux.x64-23.9.0.25.07.zip # Instant Client download URL

#------------------------------------------------------------------------------
# STARTUP BEHAVIOR CONFIGURATION
#------------------------------------------------------------------------------
ENV_INSTALL_APEX=true                     # Download APEX/ORDS during build
ENV_AUTO_INSTALL_APEX_ON_STARTUP=true     # Auto-install APEX on startup
ENV_SHOW_APEX_INSTALL_LOGS=true           # Display installation logs inline
ENV_APEX_INSTALL_TIMEOUT=600              # Installation timeout (seconds)
ENV_STARTUP_WAIT_FOR_DB=true              # Wait for database readiness
ENV_STARTUP_DB_WAIT_TIMEOUT=120           # Database wait timeout (seconds)
ENV_STARTUP_DB_WAIT_INTERVAL=5            # Database check interval (seconds)